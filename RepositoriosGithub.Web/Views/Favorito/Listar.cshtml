@model List<RepositoriosGithub.Model.Entidades.Favoritos>


<style type="text/css">
    .list-group {
        width: 300px;
    }

    .badge {
        background-color: #D2D0D0;
    }
</style>

@if (Model != null && Model.Count > 0) { 
    
<div ng-controller="favoritoCtrl">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Favoritos</h3>
        </div>
        <div class="panel-body">


            <div class="list-group">
                @foreach (var favorito in Model)
                {
                    <div class="list-group-item">
                        <span class="glyphicon glyphicon-list-alt"></span> <a href="#" ng-click="ExibirDetalhes('@favorito.usuario', '@favorito.repositorio')"> @favorito.usuario/@favorito.repositorio </a><span class="badge"><a href="#" ng-click="RemoverFavorito('@favorito.usuario', '@favorito.repositorio', @favorito.id)"> <i class="glyphicon glyphicon-trash"></i></a></span>
                    </div>
                }
            </div>


        </div>
    </div>
</div>

}
else{

        <div class="row">
        <div class="text-center col-lg-12"><span class="label label-primary">Nenhum favorito adicionado.</span></div>
    </div>
    
}