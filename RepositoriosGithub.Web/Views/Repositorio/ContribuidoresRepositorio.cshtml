@model List<RepositoriosGithub.Model.Entidades.Contribuidores>
@{
    int contador = 0;
}
@if (Model != null && Model.Count > 0) { 
<div>
        
        @foreach (var contribuidor in Model) {
            contador++;
            if (contador == 1)
            {
                @Html.Raw("<div class=\"row\">");
            }
            <div class="col-lg-3 col-sm-4 col-xs-6 text-center" style="padding-top: 10px"><img src="@contribuidor.avatar_url" width="32" height="32" /><br /> <span class="label label-primary nomeContribuidores"> <a href="@contribuidor.html_url" target="_blank"> @contribuidor.login </a></span> </div>

            if (contador == 4)
            {
                @Html.Raw("</div>");
                contador = 0;
            }    
            
        }
    
</div>
}
else{
    <div class="row">
        <div class="text-center col-lg-12"><span class="label label-primary">Não possui Contribuidoes</span></div>
    </div>
}